{
  "manifest_version": 3,
  "name": "ChaiCode AI Summarizer",
  "version": "1.0",
  "description": "Summarize any webpage in Hitesh Choudhary's style from ChaiCode. Get quick Hinglish-style summaries.",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": ["persona.txt"],
      "matches": ["<all_urls>"]
    }
  ]
}
